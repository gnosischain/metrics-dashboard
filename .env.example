# Vite-prefixed frontend envs (preferred)
VITE_CLICKHOUSE_HOST=https://your-instance.clickhouse.cloud
VITE_CLICKHOUSE_USER=default
VITE_CLICKHOUSE_PASSWORD=your_password

# Serverless API only: override dbt schema prefix in queries
CLICKHOUSE_DBT_SCHEMA=dbt

# API configuration
VITE_API_URL=https://your-proxy-api.com/api
VITE_API_KEY=your_api_key
VITE_USE_MOCK_DATA=false
VITE_DASHBOARD_TITLE=Metrics Dashboard
VITE_DEV_API_PROXY_TARGET=http://localhost:3001
VITE_PUBLIC_BASE_URL=

# Dashboard configuration
VITE_REFRESH_INTERVAL=86400000  # 24 hours in milliseconds

# Transitional legacy support (optional during migration)
REACT_APP_CLICKHOUSE_HOST=https://your-instance.clickhouse.cloud
REACT_APP_CLICKHOUSE_USER=default
REACT_APP_CLICKHOUSE_PASSWORD=your_password
REACT_APP_API_URL=https://your-proxy-api.com/api
REACT_APP_API_KEY=your_api_key
REACT_APP_USE_MOCK_DATA=false
REACT_APP_DASHBOARD_TITLE=Metrics Dashboard
REACT_APP_DEV_API_PROXY_TARGET=http://localhost:3001
REACT_APP_PUBLIC_BASE_URL=
